        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用Android预定义操作" />
    <Button
        android:text="打开浏览器"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"    />

    <Button
        android:text="编辑联系人"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2" />

    <Button
        android:text="拨打电话"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"/>
</LinearLayout>
